<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Personal Information"
            android:textColor="#2E2E2E"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="86dp" />

        <EditText
            android:id="@+id/yourname"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/title"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Your Name"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/fathername"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/yourname"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#2E2E2E"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Father's Name"
            android:textSize="14dp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="210dp" />


        <EditText
            android:id="@+id/mothername"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Mother's Name"
            android:textSize="14dp"
            android:layout_below="@+id/fathername"
            android:layout_marginTop="15dp"
            android:textColor="#2E2E2E"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="272dp" />

        <EditText
            android:id="@+id/dob"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Date of Birth"
            android:textSize="14dp"
            android:inputType="date"
            android:layout_below="@+id/mothername"
            android:layout_marginTop="15dp"
            android:textColor="#2E2E2E"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="272dp" />


        <TextView
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Gender"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:textColor="#2E2E2E"
            android:textSize="16sp"
            android:layout_below="@+id/dob"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="342dp" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Gender"
            android:id="@+id/Gender_rg"
            android:layout_marginRight="40dp"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp"
            >

            <RadioButton
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Male"
                android:textSize="12dp"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Female"
                android:textSize="12dp"/>
            <RadioButton
                android:id="@+id/Transgender"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Transgender"
                android:textSize="12dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/MaritalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Gender"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Marital Status"
            android:textColor="#2E2E2E"
            android:textSize="16sp"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/maritial_rg"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/MaritalStatus"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="446dp"
            >

            <RadioButton
                android:id="@+id/married"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:layout_weight="1"
                android:text="Married"
                android:textSize="12dp"/>

            <RadioButton
                android:id="@+id/unmarried"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Unmarried"
                android:layout_weight="0.9"
                android:textSize="12dp"/>

            <RadioButton
                android:id="@+id/Others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa_regular"
                android:text="Other"
                android:textSize="12dp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/res_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MaritalStatus"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Residential Status"
            android:textColor="#2E2E2E"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/res_spinner"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/res_status"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Residential Status"
            android:textSize="14dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_expand_more_24"
            android:id="@+id/dropdown_spinner"
            android:layout_below="@+id/res_spinner"
            android:layout_toRightOf="@+id/res_spinner"
            android:layout_marginLeft="-73dp"
            android:layout_marginTop="-33dp"
            />

        <EditText
            android:id="@+id/occupation"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/res_spinner"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Occupation"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/additional"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Additional Details"
            android:textColor="#2E2E2E"
            android:layout_below="@+id/occupation"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="86dp" />

        <EditText
            android:id="@+id/cc"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/additional"
            android:layout_marginTop="20dp"
            android:paddingTop="15dp"
            android:inputType="phone"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Country Code"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/tax_iden_no"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/cc"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:inputType="phone"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Tax Identification Number"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/placeofbirth"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/tax_iden_no"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Place of Birth"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/ccbirth"
            android:background="@drawable/textview_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:layout_below="@+id/placeofbirth"
            android:layout_marginTop="15dp"
            android:paddingTop="15dp"
            android:textColor="#2E2E2E"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/comfortaa_regular"
            android:hint="Country Code of Birth"
            android:textSize="14dp"
            />

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="14dp"
            android:inputType="phone"
            android:typeface="monospace"
            mask:allowed_chars="1234567890"
            android:fontFamily="@font/comfortaa_regular"
            mask:mask="+91 #############"
            android:hint=" Phone Number"
            android:textColor="#2E2E2E"
            android:textColorHint="#802E2E2E"
            app:keep_hint="false"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/ccbirth"
            android:background="@drawable/textview_bg"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="14dp"
            android:textColor="#2E2E2E"
            android:textColorHint="#802E2E2E"
            android:fontFamily="@font/comfortaa_regular"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/phone"
            android:background="@drawable/textview_bg"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Email Address"
            />

        <EditText
            android:id="@+id/aadhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#2E2E2E"
            android:textColorHint="#802E2E2E"
            android:textSize="14dp"
            android:fontFamily="@font/comfortaa_regular"
            android:inputType="number"
            android:maxLength="12"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/email"
            android:background="@drawable/textview_bg"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Aadhar Card Number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e-verify"
            android:textColor="#3783FB"
            android:textSize="15dp"
            android:layout_below="@+id/aadhar"
            android:layout_toRightOf="@+id/aadhar"
            android:layout_marginTop="-37dp"
            android:layout_marginLeft="-105dp"
            android:id="@+id/everifyaadhar"
            />

        <EditText
            android:id="@+id/pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#2E2E2E"
            android:textColorHint="#802E2E2E"
            android:textSize="14dp"
            android:fontFamily="@font/comfortaa_regular"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/aadhar"
            android:background="@drawable/textview_bg"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:hint="Pan Card Number"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e-verify"
            android:textColor="#3783FB"
            android:textSize="15dp"
            android:layout_below="@+id/pan"
            android:layout_toRightOf="@+id/pan"
            android:layout_marginTop="-37dp"
            android:layout_marginLeft="-105dp"
            android:id="@+id/everifypan"
            />

    </RelativeLayout>

</ScrollView>